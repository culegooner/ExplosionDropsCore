<?xml version="1.0" ?> 
<project name="BuildMod" default="build">
	
	<property file="build.properties" prefix="build"/>
	<property file="build_number.properties" prefix="build_number"/>
	
	<target name="clean">
		<delete file="${build.dir.development}\forge\mcp\src\minecraft\mcmod.info" />
		<delete dir="${build.dir.development}\forge\mcp\src\minecraft\${build.release.mod.package}\${build.release.mod.author}" />
		<delete dir="${build.dir.development}\forge\mcp\src\minecraft\${build.release.mod.package}" />
        <delete dir="${build.dir.development}\forge\mcp\src\minecraft\assets" />
		<delete dir="${build.dir.development}\forge\mcp\bin\minecraft\${build.release.mod.package}\${build.release.mod.author}" />
		<delete dir="${build.dir.development}\forge\mcp\bin\minecraft\${build.release.mod.package}" />
		<delete dir="${build.dir.development}\reobf\minecraft" />
	</target>
	
	<target name="increment_build_number">
		<propertyfile file="build_number.properties">
			<entry key="build_number" type="int" operation="+" default="1"/>
		</propertyfile>
	</target>
	
	<target name="prep">
		<copy todir="${build.dir.development}\forge\mcp\src\minecraft">
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}\${build.release.mod.common}\" />
		</copy>
	</target>
	
	<target name="replace_tokens">
        <replace file="${build.dir.development}\forge\mcp\src\minecraft\mcmod.info" token="@VERSION@" value="${build.release.mod.version}" />
		<replace file="${build.dir.development}\forge\mcp\src\minecraft\mcmod.info" token="@BUILD_NUMBER@" value="${build_number.build_number}" />
		<replace dir="${build.dir.development}\forge\mcp\src\minecraft\${build.release.mod.package}" token="@VERSION@" value="${build.release.mod.version}" />
		<replace dir="${build.dir.development}\forge\mcp\src\minecraft\${build.release.mod.package}" token="@BUILD_NUMBER@" value="${build_number.build_number}" />
        <replace dir="${build.dir.development}\forge\mcp\src\minecraft\assets" token="@VERSION@" value="${build.release.mod.version}" />
		<replace dir="${build.dir.development}\forge\mcp\src\minecraft\assets" token="@BUILD_NUMBER@" value="${build_number.build_number}" />
	</target>
	
	<target name="recompile">
		<exec dir="${build.dir.development}\forge\mcp" executable="cmd" osfamily="windows">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="${build.dir.development}\forge\mcp" executable="bash" osfamily="unix">
			<arg line="recompile.sh" />
		</exec>
	</target>
	
	<target name="reobfuscate">
		<exec dir="${build.dir.development}\forge\mcp" executable="cmd" osfamily="windows">
			<arg line="/c reobfuscate_srg.bat" />
		</exec>
		<exec dir="${build.dir.development}\forge\mcp" executable="bash" osfamily="unix">
			<arg line="reobfuscate_srg.sh" />
		</exec>
	</target>
		
	<target name="build">
		<!-- Prep for the build -->
		<antcall target="clean" />
		<antcall target="increment_build_number" />
		<antcall target="prep" />
		<antcall target="recompile" />		
		<antcall target="reobfuscate" />
		
		<!-- Build the jar -->
		<mkdir dir="${build.dir.modsrc}\${build.release.mod.name}\${build.dir.release}\${build.release.minecraft.version}\${build.release.mod.version}" />
		<jar destfile="${build.dir.modsrc}\${build.release.mod.name}\${build.dir.release}\${build.release.minecraft.version}\${build.release.mod.version}\${build.release.mod.name}-${build.release.mod.version}-${build_number.build_number}.jar" duplicate="preserve" index="true" manifestencoding="UTF-8" manifest="./MANIFEST.MF">
			<fileset dir="${build.dir.development}\forge\mcp\src\minecraft\" includes="mcmod.info" />
			<fileset dir="${build.dir.development}\forge\mcp\reobf\minecraft" />
            <fileset dir="${build.dir.development}\forge\mcp\src\minecraft\" includes="assets/" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="README.md" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="COPYING" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="COPYING.LESSER" />
            <fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="*.class" />
		</jar>
		
		<!-- Clean up the MCP source now that we are done -->
		<antcall target="clean" />
	</target>
	
	<target name="release">
		<!-- Prep for the build -->
		<antcall target="clean" />
		<antcall target="increment_build_number" />
		<antcall target="prep" />
		<antcall target="replace_tokens" />
		<antcall target="recompile" />		
		<antcall target="reobfuscate" />
		
		<!-- Build the jar -->
		<mkdir dir="${build.dir.modsrc}\${build.release.mod.name}\${build.dir.release}\${build.release.minecraft.version}\${build.release.mod.version}" />
		<jar destfile="${build.dir.modsrc}\${build.release.mod.name}\${build.dir.release}\${build.release.minecraft.version}\${build.release.mod.version}\${build.release.mod.name}-${build.release.mod.version}-${build_number.build_number}.jar" duplicate="preserve" index="true" manifestencoding="UTF-8" manifest="./MANIFEST.MF">
			<fileset dir="${build.dir.development}\forge\mcp\src\minecraft\" includes="mcmod.info" />
			<fileset dir="${build.dir.development}\forge\mcp\reobf\minecraft" />
            <fileset dir="${build.dir.development}\forge\mcp\src\minecraft\" includes="assets/" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="README.md" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="COPYING" />
			<fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="COPYING.LESSER" />
            <fileset dir="${build.dir.modsrc}\${build.release.mod.name}" includes="*.class" />
		</jar>
				
		<!-- Clean up the MCP source now that we are done -->
		<antcall target="clean" />
	</target>
</project>
